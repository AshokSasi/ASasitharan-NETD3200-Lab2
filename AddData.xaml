<UserControl x:Class="ASasitharan_NETD3200_Lab2.AddData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASasitharan_NETD3200_Lab2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
      <!--This stackpanel holds the textboxes and labels used to enter informaation -->
      <StackPanel Orientation="Vertical">
        <Label Content="Name: " Target="{Binding ElementName=txtName}"></Label>
        <TextBox Name="txtName"></TextBox>

        <Label Content="EmployeeID: " Target="{Binding ElementName=txtEmployeeID}"></Label>
        <TextBox Name="txtEmployeeID"></TextBox>

        <Label Content="Desc of Equipment: " Target="{Binding ElementName=txtDescEquipment}"></Label>
        <TextBox Name="txtDescEquipment"></TextBox>

        <Label Content="Contact Phone #: " Target="{Binding ElementName=txtPhoneNum}"></Label>
        <TextBox Name="txtPhoneNum"></TextBox>
<!--The button that adds all the data to the table-->
        <Button x:Name="btnAdd" Content="Add to Database" Height="50" Width="150" Margin="50" Click="btnAdd_Click"></Button>
      </StackPanel>
    </Grid>
</UserControl>
